<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.scoula.lh.mapper.lhRental.LhRentalApplyMapper">
    <select id="getByPanId" parameterType="string" resultType="org.scoula.lh.domain.rental.LhRentalApplyVO">
        SELECT
            *
        FROM LH_rental_apply
        WHERE pan_id = #{panId}
        ORDER BY lh_rental_id
    </select>

    <select id="getById" parameterType="int" resultType="org.scoula.lh.domain.rental.LhRentalApplyVO">
        SELECT
            *
        FROM LH_rental_apply
        WHERE lh_rental_id = #{id}
    </select>

    <insert id="create" parameterType="org.scoula.lh.domain.rental.LhRentalApplyVO">
        INSERT INTO LH_rental_apply (
            pan_id,
            sbd_lgo_nm,
            sbsc_acp_st_dt,
            sbsc_acp_clsg_dt,
            ppr_sbm_ope_anc_dt,
            ppr_acp_st_dt,
            ppr_acp_clsg_dt,
            pzwr_anc_dt,
            ctrt_st_dt,
            ctrt_ed_dt
        )
        VALUES (
                   #{panId},
                   #{sbdLgoNm},
                   #{sbscAcpStDt},
                   #{sbscAcpClsgDt},
                   #{pprSbmOpeAncDt},
                   #{pprAcpStDt},
                   #{pprAcpClsgDt},
                   #{pzwrAncDt},
                   #{ctrtStDt},
                   #{ctrtEdDt}
               )
    </insert>
</mapper>